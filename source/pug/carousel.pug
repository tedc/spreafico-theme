.carousel__container
	.carousel.carousel--grid-nowrap.carousel--grow-lg
		.carousel__item(ng-repeat="item in items" ng-attr-style="width:{{width}}%")
			figure.carousel__figure.carouse__figure--shrink
				img(ng-src="{{item.url}}" ng-attr-alt="{{item.title}}")
.carousel__nav.carousel__nav--shrink
	.icon-arrow-left(ng-click="move(false)")
	.icon-arrow-right(ng-click="move(true)")